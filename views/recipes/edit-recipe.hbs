<h1>Edit this recipe</h1>
<form action='/recipes/edit/{{recipe._id}}/' method='post' id='edit-form'>
  <label for='title'>Title</label>
  <input type='text' name='title' id='title' value='{{recipe.title}}' />

  <select name='level' id='level'>
    <option value="">--</option>
    <option value='easy'>Easy</option>
    <option value='medium'>Medium</option>
    <option value='pro'>Pro</option>
  </select>

  <label for='servings'>Serves</label>
  <input type='number' name='servings' id='servings' value='{{recipe.servings}}' />

  <label for='duration'>Duration</label>
  <input type='number' name='duration' id='duration' value='{{recipe.duration}}' />

  <select name='dishType' id=''>
    <option value="">--</option>
    <option value='breakfast'>Breakfast</option>
    <option value='dessert'>Dessert</option>
    <option value='drink'>Drink</option>
    <option value='main course'>Main course</option>
    <option value='side'>Side</option>
    <option value='snack'>Snack</option>
    <option value='other'>Other</option>
  </select>

  <img src='{{recipe.image}}' alt='' width='200' />
  <label for='image'>Upload new image</label>
  <input type='text' name='image' id='image' value='{{recipe.image}}' />

  <label for='introduction'>Introduction</label>
  <input type='text' name='introduction' id='introduction' value='{{recipe.introduction}}'/>

  <label for='ingredients'>Ingredients</label>
  <textarea name='ingredients' id='ingredients' cols='30' rows='10'>{{recipe.ingredients}}</textarea>

  <label for='instructions'>Instructions</label>
  <textarea name='instructions' id='' cols='30' rows='10'>{{recipe.instructions}}</textarea>
  
  <button type='submit'>Save changes</button>
</form>
<br />

