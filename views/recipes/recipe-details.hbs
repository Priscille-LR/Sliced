<h1>{{recipe.title}}</h1>
<p>Posted by: {{recipe.creator.username}}</p>

<span>ðŸ•’ {{recipe.duration}} mins</span>
<span>Serves: {{recipe.servings}}</span>
<span>{{recipe.dishType}}</span>
<p> {{recipe.introduction}}</p>

<img src="{{recipe.image}}" alt=""/>

<article>
  <h2>Ingredients</h2>
  <ul>
    {{#each recipe.ingredients}}
    <li>{{this}}</li>
    {{/each}}
  </ul>
</article>

<article>
  <h2>Directions</h2>
  <ol>
    {{#each recipe.instructions}}
    <li>{{this}}</li>
    {{/each}}
  </ol>
</article>

{{!-- only shows if you're the creator  --}}
{{#unless isNotCreator}} 
<a href="/recipes/edit/{{recipe._id}}">Update recipe details</a>
<form action='/recipes/delete/{{recipe._id}}' method='post'>
  <button type='submit'>Delete this recipe</button>
</form>
{{/unless}}

